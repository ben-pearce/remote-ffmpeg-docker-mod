{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "repositories": ["ben-pearce/remote-ffmpeg-docker-mod"],
  "prHourlyLimit": 15,
  "prConcurrentLimit": 15,
  "pinDigests": true,
  "dockerfile": {"ignorePaths": []},
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^Dockerfile$/"],
      "matchStrings": [
        "ARG BUBBLEWRAP_VERSION=[\"']?(?<currentValue>\\d+\\.\\d+.\\d+)[\"']?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "containers/bubblewrap",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^Dockerfile$/"],
      "matchStrings": [
        "ARG LIBFUSE_VERSION=[\"']?(?<currentValue>\\d+\\.\\d+.\\d+)[\"']?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "libfuse/libfuse",
      "extractVersionTemplate": "^fuse-(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^Dockerfile$/"],
      "matchStrings": [
        "ARG SSHFS_VERSION=[\"']?(?<currentValue>\\d+\\.\\d+.\\d+)[\"']?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "libfuse/sshfs",
      "extractVersionTemplate": "^sshfs-(?<version>.*)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^bash_unit$/"],
      "matchStrings": [
        "BASH_UNIT_VERSION=[\"']?(?<currentValue>\\d+\\.\\d+.\\d+)[\"']?"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "bash-unit/bash_unit",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": "docker",
      "matchPackageNames": ["docker.io/ubuntu"],
      "versioning": "ubuntu"
    },
    {
      "matchDatasources": "docker",
      "matchPackageNames": ["lscr.io/linuxserver/baseimage-ubuntu"],
      "versioning": "regex:^(?<compatibility>\\w+)-[0-9a-f]+-ls(?<patch>\\d+)$"
    },
    {
      "matchDatasources": "docker",
      "matchPackageNames": ["lscr.io/linuxserver/**"],
      "versioning": "regex:^v?(?<major>\\d+)\\.(?<minor>\\d+)(\\.(?<patch>\\d+))?(?:-|\\.)?(?<revision>.+)?-ls(?<build>\\d+)$"
    }
  ]
}